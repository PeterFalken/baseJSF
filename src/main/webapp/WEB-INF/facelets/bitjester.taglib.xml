<?xml version="1.0" encoding="UTF-8"?>
<facelet-taglib
        xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facelettaglibrary_2_0.xsd"
        version="2.0">
    <namespace>http://bitjester.com/jsf/facelets</namespace>
    <tag>
        <tag-name>pColumn</tag-name>
        <source>tags/pColumn.xhtml</source>
        <attribute>
            <description>Header label to be displayed</description>
            <name>label</name>
            <required>false</required>
        </attribute>
        <attribute>
            <description>Value to be displayed</description>
            <name>value</name>
            <required>true</required>
        </attribute>
        <attribute>
            <description>Type of the output field to use</description>
            <name>type</name>
            <required>false</required>
        </attribute>
    </tag>
</facelet-taglib>